package model;

import javafx.beans.property.SimpleDoubleProperty;
import javafx.beans.property.SimpleIntegerProperty;
import javafx.beans.property.SimpleStringProperty;

public class BillFX {
	private SimpleIntegerProperty idBill;

	private SimpleDoubleProperty ammount;

	private SimpleStringProperty details;

	public BillFX(int idBill, double ammount, String details) {
		this.idBill = new SimpleIntegerProperty(idBill);
		this.ammount = new SimpleDoubleProperty(ammount);
		this.details = new SimpleStringProperty(details);
	}

	public int getIdBill() {
		return idBill.get();
	}

	public void setIdBill(int idBill) {
		this.idBill = new SimpleIntegerProperty(idBill);
	}

	public double getAmmount() {
		return ammount.get();
	}

	public void setAmmount(SimpleDoubleProperty ammount) {
		this.ammount = new SimpleDoubleProperty(ammount);
	}

	public String getDetails() {
		return details.get();
	}

	public void setDetails(SimpleStringProperty details) {
		this.details = new SimpleStringProperty(details);
	}
}
